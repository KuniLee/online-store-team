<div class="container mx-auto">
<section class="flex justify-between font-HelveticaNeueCyr font-[550] text-[32px] leading-snug">
    <h2 class="">Cart <span class="font-HelveticaNeueCyr text-[16px] text-gray-300"><span class="countOfItems">{{countOfItems}}</span> items</span></h2>
    <div class="text-[16px]">
      <div class="mb-[10px]">
        <label>
          Limit:
          <input class="cartLimitQuery border-2 rounded-xl text-center border-black h-[21px] w-[73px]" type="number" name="limit" value="{{limitValue}}" min="1" max="{{countOfItems}}">
        </label>
      </div>
      <div class="flex">
        <p>Page:&nbsp;</p>
        <button class="cartPageMinusBtn w-[21px] h-21px border-2 rounded-[5px] border-black mr-[10px]"><</button>
        <p class="mr-[10px] cartPageQuery">{{pageValue}}</p>
        <button class="cartPagePlusBtn w-[21px] h-21px border-2 rounded-[5px] border-black">></button>
      </div>
    </div>
  </section>
  <div class="flex justify-between">
    <div class="CartContainerWithItem w-[70%]">
      {{#each arrayOfArticles}}
        <div class="cartItem w-[95%] border-transparent mb-4 font-HelveticaNeueCyr" data-article="{{this.article}}" data-price="{{this.price}}">
          <div class="flex items-center justify-between p-[20px]">
            <img class="object-contain max-h-[100px]" src="{{this.images.[0]}}" alt="">
            <div>
              <h3 class="jont-HelveticaNeueCyr font-[550] text-[16px] leading-snug w-[250px] text-center">{{this.title}}</h3>
            </div>
            <div class="countContainer flex items-center">
              <button type="button" class="mr-[5px]" data-action="minus">-</button>
              <p class="countNumber w-[50px] inline-block text-center">{{this.count}}</p>
              <button type="button" data-action="plus">+</button>
            </div>
            <div>
              <p><span class="cartItemPrice">{{this.price}}</span>₽</p>
            </div>
            <button class="cartDeleteBtn self-start cursor-pointer" data-button="delete">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="w-[25%] font-HelveticaNeueCyr">
      <h3 class="text-[32px] mb-[10px]">About order</h3>
      <div class="flex justify-between mb-[10px]">
        <input type="text" name="promocode" placeholder="Enter promocode" class="promocodeInput text-center border-2 rounded-xl border-black">
        <button type="button" class="enterPromocode px-[10px] py-[5px] border-2 border-black outline-none">Apply</button>
      </div>
      <div class="text-center text-[12px]">
        <p>Try: RS, NEW10, REF15</p>
      </div>
      <div class="flex justify-between mb-[10px]">
        <p class="">Items</p>
        <p class=""><span class="totalPriceCart">{{totalPrice}}</span>₽</p>
      </div>
      <div class="totalDiscount flex justify-between mb-[10px]">
        <p>Discount</p>
        <p class="text-red-600">-<span class="cartDiscount">0</span>₽</p>
      </div>
      <div class="flex justify-between mb-[10px]">
        <p>Summary</p>
        <p class="text-[32px]"><span class="priceCart">{{totalPrice}}</span>₽</p>
      </div>
      <button class="buyButton text-center w-full text-[24px] border-2 border-black">Buy now</button>
    </div>
  </div>
</div>
<section class="modalBlock w-screen h-screen bg-black/60 flex justify-center items-center absolute top-0 left-[-200%] transition-all">
  <div class="w-1/2 border-2 border- class=modalPhoneLabelblack rounded-2xl bg-white flex justify-center">
    <form class="modalForm">
      <div class="modalGrid w-[100%] font-HelveticaNeueCyr justify-between text-center">
        <h2 class="modalHead mt-[10px]">Personal details</h2>

        <label class="modalNameLabel" for="name">Firstname and lastname: </label>
        <input class="modalNameInput text-center border-2 rounded-xl" type="text" placeholder="Length of words > 3" name="name" id="name" pattern='[A-z]{3,}[ ][A-z]{3,}' autocomplete="off" required>
        <p class="modalNameError">2 words with length > 3</p>
        <label class="modalPhoneLabel" for="number">Phone number: </label>
        <input class="modalPhoneInput text-center border-2 rounded-xl" type="tel" placeholder="+XXXXXXXXX" name="number" id="number" pattern="[+][0-9]{9,12}" autocomplete="off" required>
        <p class="modalPhoneError">Phone number error</p>
        <label class="modalAddressLabel" for="address">Delivery address: </label>
        <input class="modalAddressInput text-center border-2 rounded-xl" type="text" placeholder="Delivery address" name="address" id="address" autocomplete="off" required>
        <p class="modalAddressError">Address error</p>
        <label class="modalEmailLabel" for="email">Email: </label>
        <input class="modalEmailInput text-center border-2 rounded-xl" type="email" name="email" id="email" placeholder="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" autocomplete="off" required>
        <p class="modalEmailError">Email error</p>
        <h2 class="modalCardHead">Credit card details</h2>
        <div class="cardInformation">
          <div class="flex justify-center mb-[10px]">
            <div class="systemsSprite h-[28px] w-[44px] border-2 border-black mr-[5px]">
            </div>
            <label for="cardNumber">Card number: </label>
            <input class="cardNumber text-center border-2 rounded-xl w-[300px]" placeholder="XXXXXXXXXXXXXXXX" type="number" name="cardNumber" id="cardNumber" required>
          </div>
          <div class="flex justify-center">
            <label for="validNumber">Valid: </label>
            <div>
              <input class='cardData text-center border-2 rounded-xl' placeholder="XX/XX" type="text" name="validNumber" id="validNumber" required>
              <p class="cardDataError">Card Data error</p>
            </div>
            <label for="CVV">Valid: </label>
            <div>
              <input class='modalCvvInput text-center border-2 rounded-xl' type="number" placeholder="CVV" name="CVV" id="CVV" required>
              <p class="cardDataError">Card CVV error</p>
            </div>
          </div>
        </div>
        <button class="modalSubmitButton border-2 border-black rounded-xl w-[100px] justify-self-center mb-[10px]" type="submit">Submit</button>
      </div>
    </form>
  </div>
</section>
